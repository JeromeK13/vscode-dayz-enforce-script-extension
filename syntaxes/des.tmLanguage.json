{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DayZ:Enforce Script",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
				"name": "keyword.control.des",
				"match": "\\b(if|else|while|for|return)\\b"
				},
				{
					"name": "keyword.operator.add.des",
					"match": "\\+"
				},
				{
					"name": "keyword.operator.subtract.des",
					"match": "\\-"
				},
				{
					"name": "keyword.operator.multiply.des",
					"match": "\\*"
				},
				{
					"name": "keyword.operator.modulo.des",
					"match": "\\%"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.des",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.des",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.des",
			"patterns": [
			  {
				"begin": "\/\\*",
          		"end": "\\*\/",
				"name": "comment.block.des"
			  },
			  {
				"name": "comment.line.des",
				"match": "\/\/.*$"
			  }
			]
		  }
	},
	"scopeName": "source.c"
}